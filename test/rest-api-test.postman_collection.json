				{
					"listen": "test",
					"script": {
						"exec": [
							"// Get local vars\r",
							"let mockDataCustomers = pm.variables.get( \"mockDataCustomers\" );\r",
							"let counter = pm.variables.get( \"counter\" );\r",
							"\r",
							"// Get the response\r",
							"let response = pm.response.json();\r",
							"\r",
							"// The tests\r",
							"\r",
							"pm.test(\r",
							"\t\"Check that the database reports 1 change.\",\r",
							"\tfunction()\r",
							"\t{\r",
							"\t\tpm.expect( response.changes ).to.equal( 1 );\r",
							"\t}\r",
							");\r",
							"\r",
							"pm.test(\r",
							"\t\"Check that we get lastInsertRowid as a number.\",\r",
							"\tfunction()\r",
							"\t{\r",
							"\t\tpm.expect( response.lastInsertRowid ).to.be.a( \"number\" );\r",
							"\t}\r",
							");\r",
							"\r",
							"mockDataCustomers[ counter ].id = response.lastInsertRowid;\r",
							"\r",
							"\r",
							"// Prep for next iteration\r",
							"counter++;\r",
							"pm.variables.set( \"counter\", counter ); //, Number\r",
							"\r",
							"if ( mockDataCustomers[ counter ] )\r",
							"{\r",
							"\tpostman.setNextRequest( \"Add 5 new customers\" );\r",
							"}\r",
							"else\r",
							"{\r",
							"\t// Set up vars for next method, with row ids this time\r",
							"\tpm.variables.set( \"mockDataCustomers\", mockDataCustomers );\r",
							"\tpm.variables.set( \"counter\", 0 ); //, Number\r",
							"}\r",
							""
