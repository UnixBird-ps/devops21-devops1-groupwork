{
    "name": "devops-metodik-1-groupwork",
    "version": "1.0.0",
    "private": true,
    "main": "./backend/index.js",
    "scripts": {
        "start": "node ./backend/index.js",
        "test": "echo Run tests by executing 'npm run test-...' with one of the following scripts: test-unit, test-bdd, test-rest or test-all && exit 1",
        "test-unit": "jest --config tests/jest.config.js || exit 1",
        "test-rest": "newman run tests/rest-api-test.postman_collection.json -r cli,allure --reporter-allure-export tests/allure-results || exit 1",
        "test-bdd": "wdio run tests/wdio.conf.js || exit 1",
        "test-all": "npm run test-unit && npm run test-rest && npm run test-bdd || exit 1",
        "allure-generate": "allure generate --clean --output tests/allure-report tests/allure-results",
        "allure-open": "cp -r tests/allure-report/history tests/allure-results/history && allure open tests/allure-report && rm -r tests/allure-results/history",
        "allure-open-win": "xcopy tests\\allure-report\\history tests\\allure-results\\history\\ /e /y & allure open tests\\allure-report & del /s /q tests\\allure-results\\history"
    },
    "author": "Albin, Mauro, Pawel",
    "license": "ISC",
    "dependencies": {
        "better-express-store": "^1.0.4",
        "better-sqlite3": "^7.5.0",
        "express": "^4.17.2",
        "express-session": "^1.17.2"
    },
    "devDependencies": {
        "@wdio/allure-reporter": "^7.19.5",
        "@wdio/cli": "^7.19.3",
        "@wdio/cucumber-framework": "^7.19.3",
        "@wdio/local-runner": "^7.19.3",
        "@wdio/spec-reporter": "^7.19.1",
        "allure-commandline": "^2.17.2",
        "chromedriver": "^100.0.0",
        "dotenv": "^16.0.0",
        "jest": "^27.5.1",
        "jest-allure": "^0.1.3",
        "jsdom": "^19.0.0",
        "newman": "^5.3.2",
        "newman-reporter-allure": "^1.0.7",
        "node-fetch": "^3.2.4",
        "wdio-chromedriver-service": "^7.3.2"
    }
}
